package com.bench;

public class StaircaseofRecursion 
{
	 public static int findStep(int n)
	    {
	        if ( n == 0)
	            return 0;
	        else if (n < 0)
	            return 0;
	 
	        else
	            return findStep(n - 3) + findStep(n - 2)
	                + findStep(n - 1);
	    }
	public static void main(String[] args) 
	{
		 int n = 4;
	        System.out.println(findStep(n));
	}

}
